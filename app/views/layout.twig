{% extends "master.twig" %}

{% from "components/panel.twig" import panel %}

{% block body %}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      {#{{ panel('Title', 'Body') }}#}
    </div>
    <div class="col-md-6">
      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            {% include "components/service_row.twig" with {'do_header': true} %}
          </tr>
        </thead>
        <tbody>
        {% for service in services %}
          {% include "components/service_row.twig" %}
        {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      {#{{ panel('Title', 'Body') }}#}
    </div>
  </div>
</div>

<script defer>
$('.collapse').on('show.bs.collapse', function () {
    $('.collapse.in').collapse('hide');
    $('.collapsing[aria-expanded="false"]').collapse('hide');
});
</script>

{% endblock %}
