{% spaceless %}
<div class="row service-header">
  <h2 id="{{ service.name }}">
    {{ service.name|trim|default('Name') }}
    <span class="pull-right">
      {% if service.status is defined %}
        {% include "components/status_button.twig" with {'size' : 'sm'} %}
      {% endif %}
    </span>
    <small>
{{ service.content.subtitle }}
    </small>
  </h2>
</div>
{% endspaceless %}

<div class="row">
  <div class="col-md-12">
{% block content %}
...
{% endblock content %}
  </div>
</div>
